<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.qfz.selfservicespace.activity.number_of_people_show">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <ImageView
       android:id="@+id/less_people"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:background="#000"
       />
    <NumberPicker
        android:id="@+id/show_num_picker"
        android:layout_width="100dp"
        android:layout_height="100dp"
       />
    <ImageView
        android:id="@+id/more_people"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#df0"
        />
   </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="#FF0000"></View>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/sure_people"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="#0fa8ce"
        android:gravity="center"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#FF0000"></View>
    <TextView
        android:id="@+id/cancel_people"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="取消"
        android:textSize="20sp"
        android:textColor="#0fa8ce"
        android:gravity="center"
        />
    </LinearLayout>




</LinearLayout>
