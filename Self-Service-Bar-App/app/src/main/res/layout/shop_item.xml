<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    <ImageView
        android:id="@+id/search_shopimage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bar"
        />

    </RelativeLayout>
    <ImageView
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        >
     <TextView
         android:id="@+id/search_barname"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="霍格沃兹"
         android:layout_alignParentTop="true"
         />
     <ImageView
          android:id="@+id/phone_image"
          android:layout_below="@+id/search_barname"
          android:layout_marginTop="5dp"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_alignLeft="@+id/search_barname"
          android:scaleType="centerCrop"
          android:src="@drawable/phone"/>
     <TextView
          android:id="@+id/search_bar_phone_num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/phone_image"
          android:text="15666878787"
          android:layout_alignBottom="@+id/phone_image"
          android:layout_toRightOf="@+id/phone_image"
          android:layout_marginLeft="1dp"
            />
     <TextView
          android:id="@+id/search_distance"
          android:layout_toRightOf="@+id/search_bar_phone_num"
          android:layout_alignTop="@+id/phone_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:paddingRight="1dp"
          android:paddingEnd="1dp"
          android:text="1.5km"
          android:layout_marginLeft="60dp"
            />
     <ImageView
            android:id="@+id/address_image"
            android:layout_below="@+id/phone_image"
            android:layout_marginTop="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@+id/phone_image"
            android:scaleType="centerCrop"
            android:src="@drawable/address"/>
     <TextView
            android:id="@+id/search_bar_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/address_image"
            android:text="北京市海淀区西土城路10号北京邮电大学"
            android:layout_toRightOf="@+id/phone_image"
            android:layout_marginLeft="1dp"
            />
     <TextView
            android:layout_below="@+id/search_bar_address"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="1dp"
            android:background="@color/lineGray" />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/search_bar_address"
         android:orientation="horizontal"
         >
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="工作日"
             android:paddingTop="4dp"
             android:textSize="8sp"
             android:textColor="#009900"
             android:textAlignment="center"
             />
         </LinearLayout>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >

         <TextView
             android:layout_height="0dp"
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:paddingTop="4dp"
             android:textAlignment="center"
             android:text="上午"
             android:textColor="#FF6666"
             android:textSize="8sp"
             />
         <TextView
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:paddingTop="4dp"
                 android:textAlignment="center"
                 android:text="下午"
                 android:textSize="8sp"
                 android:textColor="#FF6666"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="7"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >

             <TextView
                 android:id="@+id/search_weekday_am"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:textAlignment="center"
                 android:text="18:00-12:00"
                 />
             <TextView
                 android:id="@+id/search_weekday_pm"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:textAlignment="center"
                 android:text="8:00-12:00"
                 />
         </LinearLayout>
     </LinearLayout>
     <TextView
         android:layout_height="match_parent"
         android:layout_width="3dp"
         />
     <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="match_parent"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="周末"
                     android:paddingTop="7dp"
                     android:textSize="8sp"
                     android:textAlignment="center"
                     android:textColor="#009900"
                     />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="2"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 >

                 <TextView
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:paddingTop="4dp"
                     android:textAlignment="center"
                     android:text="上午"
                     android:textSize="8sp"
                     android:textColor="#FF6666"
                     />
                 <TextView
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:paddingTop="4dp"
                     android:textAlignment="center"
                     android:text="下午"
                     android:textSize="8sp"
                     android:textColor="#FF6666"
                     />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="7"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/search_weekend_am"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:textAlignment="center"
                     android:text="18:00-12:00"
                     />
                 <TextView
                     android:id="@+id/search_weekend_pm"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:layout_width="match_parent"
                     android:textAlignment="center"
                     android:text="18:00-12:00"
                     />
             </LinearLayout>
         </LinearLayout>

     </LinearLayout>





    </RelativeLayout>







    </LinearLayout>

</android.support.constraint.ConstraintLayout>